/* pages/list/list.wxss */
@import "../common-list.wxss";
.containter{
  width: 750rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.recommended{
  width: 100%;
}
.recommended-article{
  display: flex;
  width: 720rpx;
  margin: 0 auto;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.date{
  font-size: 52rpx;
  letter-spacing: 10rpx;
  position: relative;
  padding-bottom: 20rpx;
  margin: 20rpx auto;
}
.date::after{
  content: " ";
  width: 114rpx;
  height: 6rpx;
  bottom: 0;
  background: #666666;
  position: absolute;
  left: 62rpx;
}
.recommended-title{
  text-align: center;
  line-height: 1.5em;
  font-size: 36rpx;
}
.recommended-img{
  width: 720rpx;
}
.recommended-contents{
  margin: 10rpx 10rpx;
}
.recommended-contents>text{
  padding: 10rpx 20rpx;
  margin: 10rpx;
  display: inline-block;
  border: 4rpx solid #000;
}
.recommended-contents>text:first-of-type{
  font-weight: bold;
  color: #fff;
  background: #000;
}
