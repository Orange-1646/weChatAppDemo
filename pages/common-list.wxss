.list{
  background: #eee;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 50rpx 0;
}
.each-list{
  width: 650rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: #fff;
  margin-bottom: 50rpx;
}
.each-list:last-of-type{
  margin-bottom: 0;
}
.mark{
  display: flex;
  height: 80rpx;
  margin: 20rpx;
}
.avatar{
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.mark-info{
  line-height: 80rpx;
  height: 80rpx;
  color: #aaa;
}
.pic-desc{
  display: inline-block;
  height: 2em;
  line-height: 1em;
  letter-spacing: 2rpx;
  margin: 30rpx;
  font-size: 48rpx;
  color: #333;
}
.content-pic{
  width: 100%;
}
.content-extension{
  margin: 40rpx auto;
  justify-content: space-between;
}
.content-extension>text{
  border: 4rpx solid #000;
  padding: 10rpx;
  margin-left: 10rpx;
}
.more-options{
  float: right;
  display: flex;
}
.more-options>image{
  margin: 10rpx 10rpx;
  width: 60rpx;
  height: 60rpx;
}
.more-options>button{
  width: 60rpx;
  height: 60rpx;
  background: transparent;
  padding: 0;
}
.more-options>button:after{
  border: none;
}
.more-options>button>image{
  width: 60rpx;
  height: 60rpx;

}